{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "types": ["node"],
    "outDir": "dist",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "server/**/*"],
  "exclude": ["node_modules"]
}